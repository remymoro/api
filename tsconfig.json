{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@database/*": ["database/*"],
      "@common/*": ["common/*"],
      "@errors/*": ["common/errors/*"],
      "@filters/*": ["common/filters/*"],
      "@modules/*": ["modules/*"],
      "@centers/*": ["modules/centers/*"],
      "@stores/*": ["modules/stores/*"],
      "@users/*": ["modules/users/*"],
      "@prisma/*": ["database/*"]
    },
    "incremental": true
  }
}
