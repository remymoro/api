generator client {
  provider = "prisma-client-js"
}

generator custom {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
//
// =====================
//       ENUMS
// =====================
//

enum UserRole {
  ADMIN
  RESPONSABLE
  BENEVOLE
}

//
// =====================
//       MODELS
// =====================
//

model Center {
  id         Int      @id @default(autoincrement())
  name       String
  city       String
  codePostal String
  address    String
  phone      String?
  email      String?

  stores     Store[]
  users      User[]  // ðŸ”¥ Tous les utilisateurs du centre (responsables + bÃ©nÃ©voles)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Store {
  id         Int      @id @default(autoincrement())
  name       String
  address    String
  city       String
  codePostal String
  phone      String?
  email      String?
  img        String?

  centerId   Int
  center     Center   @relation(fields: [centerId], references: [id], onDelete: Restrict)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // ðŸ”¥ UnicitÃ© rÃ©elle dâ€™un magasin : adresse complÃ¨te
  @@unique([address, city, codePostal])
}

model User {
  id        Int      @id @default(autoincrement())

  username  String   @unique
  email     String?  @unique
  password  String

  role      UserRole @default(BENEVOLE)

  centerId  Int?
  center    Center?  @relation(fields: [centerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
