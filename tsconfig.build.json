{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@common/*": ["common/*"],
      "@errors/*": ["common/errors/*"],
      "@filters/*": ["common/filters/*"],
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"],
      "@centers/*": ["modules/centers/*"],
      "@stores/*": ["modules/stores/*"],
      "@users/*": ["modules/users/*"],
      "@prisma/*": ["database/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
