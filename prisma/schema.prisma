

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Center {
  id         Int      @id @default(autoincrement())
  name       String
  city       String
  codePostal String
  address    String
  phone      String?
  email      String?

  stores     Store[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Store {
  id         Int      @id @default(autoincrement())
  name       String
  address    String
  city       String
  codePostal String
  phone      String?
  email      String?
  img        String?

  centerId   Int
  center     Center   @relation(fields: [centerId], references: [id], onDelete: Restrict)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // ðŸ”¥ UnicitÃ© rÃ©elle dâ€™un magasin : adresse exacte
  @@unique([address, city, codePostal])
}
